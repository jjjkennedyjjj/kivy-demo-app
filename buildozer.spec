[app]

# (str) Título de tu aplicación
title = Mi App Sencilla

# (str) Nombre del paquete (sin espacios, en minúsculas)
package.name = miappsencilla

# (str) Dominio del paquete (se recomienda usar tu dominio o uno ficticio)
package.domain = org.ejemplo

# (str) Directorio donde está el código fuente (main.py)
source.dir = .

# (list) Extensiones de archivo a incluir
source.include_exts = py,kv,png,jpg,atlas

# (str) Versión de la aplicación
version = 0.1

# (list) Requerimientos de la aplicación (separados por comas)
requirements = python3,kivy

# (str) Orientación soportada (portrait o landscape)
orientation = portrait